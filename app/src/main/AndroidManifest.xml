<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.ezmilja.booklogger">

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.CAMERA" />
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.S" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ericssonlogo_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ericssonlogo_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name=".SplashScreen">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
            <intent-filter>
                <action android:name="android.intent.action.SEARCH" />
            </intent-filter>
        </activity>
        <activity android:name=".BookDetailsAdder"
            android:screenOrientation="portrait"
            android:theme="@style/AppTheme"/>
        <activity android:name=".ContentsActivity"
            android:screenOrientation="portrait"
            android:theme="@style/AppTheme"/>
        <activity android:name=".ScanActivity"
            android:screenOrientation="portrait"
            android:theme="@style/AppTheme"/>
        <activity android:name=".BookDetailsPage"
            android:screenOrientation="portrait"
            android:theme="@style/AppTheme"/>
        <activity android:name=".BookDetailsEditor"
            android:screenOrientation="portrait"
            android:theme="@style/AppTheme"/>
        <activity android:name=".BookList"
            android:screenOrientation="portrait"
            android:theme="@style/AppTheme"/>
        <activity android:name=".RequestList"
            android:screenOrientation="portrait"
            android:theme="@style/AppTheme"/>
    </application>

</manifest>