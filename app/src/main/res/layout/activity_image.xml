<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:weightSum="90"
        android:orientation="horizontal"
        android:layout_marginTop="8dp">

        <Button
            android:id="@+id/btnautoimage"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/buttonleft"
            android:text="Autofill Image"
            android:layout_marginRight="0.5dp"
            android:textColor="#ffffff"
            android:layout_weight="30"/>

        <Button
            android:id="@+id/btnChoose"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/buttoncenter"
            android:layout_marginLeft="0.5dp"
            android:layout_marginRight="0.5dp"
            android:text="Choose Image"
            android:textColor="#ffffff"
            android:layout_weight="30"/>

        <Button
            android:id="@+id/btnsend"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/buttonright"
            android:layout_marginLeft="0.5dp"
            android:text="Submit Image"
            android:textColor="#ffffff"
            android:layout_weight="30"/>

    </LinearLayout>

        <ImageView
            android:id="@+id/imgView"
            app:srcCompat="@color/common_google_signin_btn_text_dark_disabled"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/notfound"
            android:layout_gravity="center"/>



</LinearLayout>